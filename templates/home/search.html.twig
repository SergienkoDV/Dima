{% extends 'base.html.twig' %}
{% block title %}Hello HomeController!{% endblock %}
{% block body %}
    <div class="row display-flex list">

        {% for profile in profiles %}
            <div class="col-xl-2 col-lg-3 col-md-3 col-sm-4 col col-xs-6 mastercart display-flex">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/beautybyisk/src/img/{{ profile.master.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ profile.master.name }} {{ profile.master.family }}</h5>
                        <h5 class="card-title"><img class="icon" src="/beautybyisk/public/img/{{ profile.master.category.img }}">{{ profile.master.category.name }}</h5>
                        <p class="card-text"></p>
                        <a href="http://localhost/beautybyisk/public/master/{{ profile.master.user.id }}" class="btn-profile">Профиль</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <style>
        .card-img-top{
            height: 200px;
            /*width: 400px;*/
            overflow: hidden;
        }
        .card-body>h5{
            margin-top: 0px;
        }
        .btn-profile {
            padding: 5px;
            color: rgb(206, 61, 95);
            border: 1px solid #ce3d5f;
            background-color: rgba(0, 0, 0, 0.55);
        }
        .btn-profile:hover{
            padding: 5px;
            color: #fff;
            border: 1px solid black;
            background-color: #ff003b;
            transition: 1s;
        }
        .card-title {
            margin-bottom: .75rem;
            /* background-color: rgba(0,0,0,0.4); */
            color: white;
            text-align: left;
            margin-left: 3px;
        }
        .card-body {
            -ms-flex: 1 1 auto;
            flex: 1 1 auto;
            /* padding: 1.25rem; */
            margin-top: -50%;
            background-color: rgba(0,0,0,0.4);
            padding-bottom: 8px;
        }
    </style>
    <script>
        $('.left-menu').show();
        </script>
{% endblock %}
